# Prescription Tracking System - Environment Variables
# Copy this file to .env.local or .env.development and fill in the values

# SendGrid API Configuration
REACT_APP_SENDGRID_API_KEY=your_sendgrid_api_key_here
REACT_APP_SENDGRID_FROM_EMAIL=notifications@zappy.health
REACT_APP_SENDGRID_FROM_NAME=Zappy Health

# UPS API Configuration
REACT_APP_UPS_API_URL=https://onlinetools.ups.com/api
REACT_APP_UPS_CLIENT_ID=your_ups_client_id_here
REACT_APP_UPS_CLIENT_SECRET=your_ups_client_secret_here

# FedEx API Configuration
REACT_APP_FEDEX_API_URL=https://apis.fedex.com
REACT_APP_FEDEX_CLIENT_ID=your_fedex_client_id_here
REACT_APP_FEDEX_CLIENT_SECRET=your_fedex_client_secret_here

# USPS API Configuration
REACT_APP_USPS_API_URL=https://secure.shippingapis.com/ShippingAPI.dll
REACT_APP_USPS_USER_ID=your_usps_user_id_here

# Email Notification Settings
REACT_APP_EMAIL_NOTIFICATIONS_ENABLED=true
REACT_APP_EMAIL_NOTIFICATIONS_DEBUG=false

# Tracking Update Settings
REACT_APP_TRACKING_UPDATE_INTERVAL_HOURS=24
REACT_APP_TRACKING_UPDATE_ENABLED=true

# Refill Reminder Settings
REACT_APP_REFILL_REMINDER_DAYS_BEFORE=7
REACT_APP_REFILL_REMINDER_ENABLED=true
