# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_...               # Your Stripe secret API key
STRIPE_WEBHOOK_SECRET=whsec_...             # Webhook signing secret from Stripe dashboard
STRIPE_API_VERSION=2023-10-16              # Stripe API version to use

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co     # Your Supabase project URL
SUPABASE_SERVICE_ROLE_KEY=eyJ...                  # Supabase service role key
SUPABASE_DB_URL=postgresql://...                  # Direct database connection URL

# Application Configuration
NODE_ENV=development                        # Environment: development, staging, production
LOG_LEVEL=info                             # Logging level: debug, info, warn, error
DEBUG=false                                # Enable debug mode

# Monitoring Configuration
METRICS_PORT=9090                          # Port for metrics server
ALERT_WEBHOOK_URL=https://...              # Webhook URL for alerts
ALERT_EMAIL=alerts@company.com             # Email for critical alerts

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100                # Maximum concurrent webhook requests
REQUEST_TIMEOUT_MS=30000                   # Request timeout in milliseconds
RATE_LIMIT_REQUESTS=1000                   # Rate limit requests per window
RATE_LIMIT_WINDOW_MS=60000                # Rate limit window in milliseconds

# Database Configuration
DB_POOL_SIZE=20                           # Database connection pool size
DB_IDLE_TIMEOUT=10000                     # Database idle connection timeout
DB_CONNECT_TIMEOUT=5000                   # Database connection timeout

# Security Configuration
TLS_CERT_PATH=./certs/cert.pem            # TLS certificate path
TLS_KEY_PATH=./certs/key.pem              # TLS private key path
ALLOWED_IPS=                              # Comma-separated list of allowed IPs

# Backup Configuration
BACKUP_ENABLED=true                        # Enable automatic backups
BACKUP_RETENTION_DAYS=30                   # Days to keep backups
BACKUP_ENCRYPTION_KEY=                     # GPG key for backup encryption
BACKUP_STORAGE_URL=s3://...               # Backup storage location

# Monitoring Thresholds
ALERT_THRESHOLD_ERRORS=10                  # Error count threshold for alerts
ALERT_THRESHOLD_LATENCY=1000              # Latency threshold in ms
ALERT_THRESHOLD_MEMORY=80                  # Memory usage threshold %
ALERT_THRESHOLD_CPU=70                    # CPU usage threshold %

# Maintenance Configuration
LOG_ROTATION_DAYS=7                       # Days to keep logs
METRICS_RETENTION_DAYS=30                 # Days to keep metrics
CLEANUP_SCHEDULE="0 0 * * *"             # Cleanup cron schedule
RECONCILIATION_SCHEDULE="0 * * * *"       # Data reconciliation schedule

# Feature Flags
ENABLE_METRICS=true                       # Enable metrics collection
ENABLE_TRACING=false                      # Enable request tracing
ENABLE_CACHING=true                       # Enable response caching
ENABLE_RATE_LIMITING=true                 # Enable rate limiting

# Development Configuration
TEST_STRIPE_KEY=sk_test_...              # Test mode Stripe key
TEST_WEBHOOK_SECRET=whsec_test_...       # Test webhook secret

# The following variables should be set in production only
# PROD_STRIPE_KEY=sk_live_...
# PROD_WEBHOOK_SECRET=whsec_live_...
# PROD_SUPABASE_KEY=eyJ...

# Comments:
# - All sensitive values should be changed in production
# - Use appropriate key rotation policies
# - Keep this file updated with all required variables
# - Never commit actual .env files to version control
# - Use different values for different environments