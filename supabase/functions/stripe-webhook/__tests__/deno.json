{
  "compilerOptions": {
    "allowJs": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "isolatedModules": true,
    "lib": ["deno.window"]
  },
  "importMap": "./import_map.json",
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "test": {
    "files": {
      "include": ["**/*_test.ts", "**/*.test.ts"],
      "exclude": ["**/node_modules/**"]
    }
  },
  "tasks": {
    "test": "deno test --allow-net --allow-env --allow-read --import-map=./import_map.json",
    "test:watch": "deno test --watch --allow-net --allow-env --allow-read --import-map=./import_map.json",
    "test:coverage": "deno test --coverage=coverage --allow-net --allow-env --allow-read --import-map=./import_map.json"
  }
}