{
  "compilerOptions": {
    "allowJs": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "isolatedModules": true,
    "lib": ["deno.window"]
  },
  "lint": {
    "files": {
      "include": ["**/*.ts"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-debugger"]
    }
  },
  "fmt": {
    "files": {
      "include": ["**/*.ts"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "importMap": "./import_map.json",
  "tasks": {
    "start": "deno run --allow-net --allow-env index.ts",
    "dev": "deno run --watch --allow-net --allow-env index.ts",
    "test": "deno test --allow-net --allow-env --allow-read",
    "test:watch": "deno test --watch --allow-net --allow-env --allow-read",
    "test:coverage": "deno test --coverage=coverage --allow-net --allow-env --allow-read",
    "lint": "deno lint",
    "fmt": "deno fmt"
  }
}