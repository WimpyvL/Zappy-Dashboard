{
  "name": "@supabase/webhook-docs",
  "version": "1.0.0",
  "description": "Documentation tools for Stripe webhook handler",
  "license": "MIT",
  "private": true,
  "scripts": {
    "docs:init": "ts-node init-docs.ts",
    "docs:generate": "ts-node generate-docs.ts",
    "docs:validate": "ts-node validate-docs.ts",
    "docs:publish": "ts-node publish-docs.ts",
    "docs:deploy": "ts-node deploy-docs.ts",
    "docs:watch": "ts-node watch-docs.ts",
    "docs:serve": "docsify serve docs",
    "preview": "ts-node preview-template.ts",
    "analyze": "ts-node analyze-docs.ts",
    "extract": "ts-node extract-examples.ts",
    "theme:create": "ts-node manage-themes.ts --create",
    "theme:list": "ts-node manage-themes.ts --list",
    "theme:preview": "ts-node manage-themes.ts --preview",
    "profile:create": "ts-node manage-profiles.ts --create",
    "profile:switch": "ts-node manage-profiles.ts --switch",
    "profile:list": "ts-node manage-profiles.ts --list",
    "version:bump": "ts-node version-docs.ts --bump",
    "version:list": "ts-node version-docs.ts --list",
    "search:build": "ts-node search-docs.ts --rebuild",
    "search:query": "ts-node search-docs.ts --query",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "docsify-cli": "^4.4.4",
    "glob": "^10.3.10",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.0",
    "jsonschema": "^1.4.1",
    "lunr": "^2.3.9",
    "marked": "^11.0.0",
    "md-to-pdf": "^5.2.4",
    "prismjs": "^1.29.0",
    "puppeteer": "^21.5.2",
    "readability-scores": "^1.0.8",
    "remove-markdown": "^0.5.0",
    "sass": "^1.69.5",
    "node-spellchecker": "^1.1.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/handlebars": "^4.1.0",
    "@types/jest": "^29.5.10",
    "@types/js-yaml": "^4.0.9",
    "@types/lunr": "^2.3.7",
    "@types/marked": "^5.0.2",
    "@types/node": "^20.10.0",
    "@types/prismjs": "^1.26.3",
    "@types/remove-markdown": "^0.3.4",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=8"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/__tests__"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/node_modules/**",
      "!**/dist/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 80
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ]
  }
}